# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the computer list
#GET     /                           controllers.Application.index


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET    /questions/index            controllers.Application.index


#TODO  Should be post:
GET   /questions/create                  controllers.Application.create

GET /questions/:id                      controllers.Application.find(id: Int)

GET    /questions                  controllers.Application.get

GET /questions/quiz/first                    controllers.Application.quizFirst
POST /questions/quiz/reply                    controllers.Application.quizReply
